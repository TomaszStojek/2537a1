<%- include("templates/header") %>

<div class="container text-center">
  <% if (!authenticated) { %>
    <h1 class="mt-4">Welcome!</h1>
    <ul class="list-group mt-3">
      <li class="list-group-item"><a href="/createUser" class="btn btn-primary">Create User</a></li>
      <li class="list-group-item"><a href="/login" class="btn btn-primary">Login</a></li>
    </ul>
  <% } else { %>
    <h1 class="mt-4">Hello, <%= name %>!</h1>
    <ul class="list-group mt-3">
      <li class="list-group-item"><a href="/logout" class="btn btn-danger">Log out</a></li>
      <li class="list-group-item"><a href="/members" class="btn btn-primary">Members area</a></li>
    </ul>
  <% } %>
</div>

<%- include("templates/footer") %>
